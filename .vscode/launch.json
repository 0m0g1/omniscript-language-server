{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run OmniScript Extension",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/client"
        ],
        "outFiles": [
          "${workspaceFolder}/client/**/*.js"
        ]
      }
    ]
  }
  